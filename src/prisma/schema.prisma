// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id             String         @id @default(uuid())
  firstName      String         @map("first_name") @db.VarChar(255)
  lastName       String         @map("last_name") @db.VarChar(255)
  privateAccount Boolean        @default(false) @map("private_account")
  email          String         @unique @db.VarChar(255)
  password       String
  avatar         String
  theme          String         @default("light")
  bio            String?        @default("")
  username       String         @unique
  createdAt      DateTime       @default(now()) @map("created_at")
  roles          Role[]
  saved          Post[]         @relation("saved_posts")
  posts          Post[]         @relation("created_posts")
  comments       Comment[]
  notifications  Notification[]
}

model Comment {
  id        String   @id @default(uuid())
  body      String   @db.Text
  userId    String   @map("user_id")
  postId    String   @map("post_id")
  post      Post     @relation(fields: [postId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now()) @map("created_at")
}

model Notification {
  id        String           @id @default(uuid())
  belongsTo String?          @map("belongs_to")
  user      User?            @relation(fields: [belongsTo], references: [id])
  type      NotificationType
}

model Post {
  id        String    @id @default(uuid())
  body      String    @db.Text
  comments  Comment[]
  userId    String    @map("user_id")
  user      User      @relation("created_posts", fields: [userId], references: [id])
  save      User      @relation("saved_posts", fields: [userId], references: [id])
  createdAt DateTime  @default(now()) @map("created_at")
}

enum Role {
  PARTNER
  VERIFIED
  CORE_TEAM
}

enum NotificationType {
  NEW_POST
  POST_REACTION
  FRIEND_REQUEST
  FRIEND_REQUEST_ACCEPT
}

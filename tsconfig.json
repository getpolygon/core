{
  "compilerOptions": {
    "strict": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "build/",
    "alwaysStrict": true,
    "module": "commonjs",
    "removeComments": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "disableSizeLimit": true,
    "typeRoots": ["src/@types"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "build"]
}

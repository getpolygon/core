{
  "compilerOptions": {
    "pretty": true,
    "strict": true,
    "target": "ES6",
    "sourceMap": true,
    "outDir": "build/",
    "declaration": false,
    "alwaysStrict": true,
    "module": "CommonJS",
    "removeComments": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "disableSizeLimit": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"]
}

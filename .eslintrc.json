{
  "env": {
    "node": true,
    "es2021": true,
    "browser": false
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 13
  },
  "plugins": ["@typescript-eslint", "eslint-plugin-tsdoc", "prettier"],
  "rules": {
    "tsdoc/syntax": "warn",
    "semi": ["warn", "always"],
    "quotes": ["warn", "double"],
    "prettier/prettier": ["error", { "endOfLine": "auto" }]
  }
}

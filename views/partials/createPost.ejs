<div id="create-post" class="bg-white container rounded shadow-sm create-post mb-5 mt-5 p-2">
    <div class="d-flex">
        <img height="50" src="<%= currentAccount.pictureUrl %>" class="rounded-circle shadow-sm mr-2"
            alt="profile-picture">
        <input type="text" style="height: inherit;" required class="form-control" name="text" id="postTextarea"
            placeholder="Create post">
        <button class="btn btn-primary ml-2" id="postButton" type="submit" disabled>Post</button>
    </div>
    <hr class="solid" />
    <div class="d-flex">
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary btn-block" data-toggle="modal" data-target="#photoModal">
            <i class="fas fa-file-image"></i>
            Photo
        </button>

        <!-- Modal -->
        <div class="modal fade" id="photoModal" tabindex="-1" aria-labelledby="photoModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="photoModalLabel">Modal title</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <input type="file" class="form-control">
                        <div class="container">
                            <span>Preview</span>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <!-- <button type="button" class="btn btn-primary">ADD</button> -->
                    </div>
                </div>
            </div>
        </div>
        &nbsp;
        &nbsp;
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-danger btn-block" data-toggle="modal" data-target="#videoModal">
            <i class="fas fa-video"></i>
            Video
        </button>

        <!-- Modal -->
        <div class="modal fade" id="videoModal" tabindex="-1" aria-labelledby="videoModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="videoModalLabel">Modal title</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <input type="file" class="form-control">
                        <div class="container">
                            <span>Preview</span>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <!-- <button type="button" class="btn btn-primary">ADD</button> -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    let postTextListener = document.getElementById("postTextarea");
    let postButtonListener = document.getElementById("postButton");
    postTextListener.addEventListener("keyup", () => {
        if (postTextListener.value.length > 0) {
            postButtonListener.removeAttribute("disabled");
        } else {
            postButtonListener.setAttribute("disabled", true);
        };
    });
</script>
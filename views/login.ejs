<%- include ("./partials/head") %>

<link itemprop="url" rel="stylesheet" href="/css/auth/login/style.css" />

<div class="container vh-100 vw-50 d-flex align-items-center col justify-content-center">
  <div class="container">
    <form id="form" class="form-group vw-50" action="login" method="POST">
        <h1 align="center">Login to ArmSocial</h1>

        <input autocomplete="email" class="form-control mt-3" required id="email" name="email" type="email" placeholder="Email" />

        <input autocomplete="current-password" class="form-control mt-3" required id="password" name="password" type="password" placeholder="Password"
          minlength="8" />

        <div class="err">
          <% if (locals.err) {%>
            <small> <%= err %> </small>
          <%}%>
        </div>

        <button class="btn btn-primary mt-3" id="submitButton" type="submit">Login</button>
        <p class="mt-3">Don't have an account? <a href="/auth/register" class="text-link">Register</a></p>
      </form>
  </div>
</div>

    <script src="/js/login/script.js"></script>
<%- include ("./partials/footer") %>